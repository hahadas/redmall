			tapAvaterLikes(e){
				e.stopPropagation();
				console.log("关注");
				
				let index = this.getIndex();
				
				if(this.distanceX > 0){//同城
					if(this.videoList1[index].likeCheck >= 1){//取消关注
						this.videoList1[index].likeCheck = 0;
					}else{//关注
						this.videoList1[index].likeCheck = 1;
